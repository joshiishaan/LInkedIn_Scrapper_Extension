{
  "manifest_version": 3,
  "name": "LinkedIn Scrapper",
  "version": "1.0.0",
  "permissions": ["storage", "tabs", "cookies", "scripting"],
  "host_permissions": ["https://linkedin.com/*", "https://*.linkedin.com/*"],
  "action": {
    "default_popup": "/public/popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://linkedin.com/*", "https://*.linkedin.com/*"],
      "js": ["assets/boot.js"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://linkedin.com/*", "https://*.linkedin.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["assets/*"]
    }
  ]
}
